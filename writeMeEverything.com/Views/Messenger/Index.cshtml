                        <i class="ti-close"></i>
                    </button>
                </div>
                <div class="modal-body">

                    <div id="friends" class="sidebar active">
                        <div class="sidebar-body">
                            <ul class="list-group list-group-flush notfriend">
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
