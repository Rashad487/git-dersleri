                                <a href="#" class="btn btn-light sidebar-close">
                                    <i class="ti-close"></i>
                                </a>
                            </li>
                        </ul>

                    </header>
                    <form action="">
                        <input type="text" class="form-control" placeholder="Search chat">
                    </form>
                    <div class="sidebar-body">
                        <ul class="list-group list-group-flush">

                            @foreach (var friend in Model.Friends)
                            {
                                if (friend.SenderId == Model.User.Id)
                                {

                                    <li class="list-group-item friendlist" id="@friend.AcceptorId">
                                        <div>
                                            <figure class="avatar avatar-state-success">
                                                <img src="~/wwwroot/userData/profile_image/@friend.Acceptor.Avatar" class="rounded-circle">
                                            </figure>
                                        </div>
                                        <div class="users-list-body">
                                            <h5>@friend.Acceptor.Firstname   @friend.Acceptor.Lastname</h5>

                                            <p>Lorem ipsum dolor sitsdc sdcsdc sdcsdcs</p>
                                            <div class="users-list-action action-toggle">
                                                <div class="dropdown">
                                                    <a data-toggle="dropdown" href="#">
                                                        <i class="ti-more"></i>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a href="#" class="dropdown-item">Open</a>
                                                        <a href="#" class="dropdown-item">Delete</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                }
                                else
                                {
                                    <li class="list-group-item friendlist" id="@friend.SenderId">
                                        <div>
                                            <figure class="avatar">
                                                <img src="~/wwwroot/userData/profile_image/@friend.Sender.Avatar" class="rounded-circle">
                                            </figure>
                                        </div>
                                        <div class="users-list-body">

                                            <h5>@friend.Sender.Firstname   @friend.Sender.Lastname</h5>

                                            <p>Lorem ipsum dolor sitsdc sdcsdc sdcsdcs</p>
