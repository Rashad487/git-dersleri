    <!-- edit profile modal -->
    <div class="modal fade" id="editProfileModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-zoom" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="ti-pencil"></i> Profile Edit
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="ti-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#personal" role="tab" aria-controls="personal" aria-selected="true">Personal</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane show active" id="personal" role="tabpanel">
                            <form >
                                <input type="hidden" name="Id" value="@Model.User.Id" />
                                <input type="hidden" name="Photo" value="@Model.User.Avatar" />

                                <div class="form-group">
                                    <label for="firstname" class="col-form-label">Firstname</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="ti-user"></i>
                                            </span>
                                        </div>
                                        @Html.TextBoxFor(r => r.User.Firstname, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(r => r.User.Firstname, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control" id="firstname" value="@Model.User.Firstname">*@
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="lastname" class="col-form-label">Lastname</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="ti-user"></i>
                                            </span>
                                        </div>
                                        @Html.TextBoxFor(r => r.User.Lastname, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(r => r.User.Lastname, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label">Avatar</label>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <figure class="avatar mr-3 item-rtl">
                                                <img src="~/wwwroot/userData/profile_image/@Model.User.Avatar" class="rounded-circle">
                                            </figure>
                                        </div>
                                        <div class="custom-file">
                                            @Html.TextBoxFor(m => m.User.File, null, new { @class = "custom-file-input", @type = "file", @id = "customFile" })
                                            @Html.ValidationMessageFor(m => m.User.File, null, new { @class = "text-danger" })
                                            <label class="custom-file-label" for="customFile">Choose file</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="city" class="col-form-label">City</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="ti-map-alt"></i>
                                            </span>
                                        </div>
                                        @Html.TextBoxFor(r => r.User.City, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(r => r.User.City, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="phone" class="col-form-label">Phone</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="ti-mobile"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control" id="phone" placeholder="(055) 555 55 55" maxlength="10" value="@Model.User.City">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="about-text" class="col-form-label">Write a few words that describe you</label>
                                    @Html.TextAreaFor(r => r.User.About, new { @class = "form-control", @id = "about-text" })
                                    @Html.ValidationMessageFor(r => r.User.About, "", new { @class = "text-danger" })
                                </div>

                                <button type="submit" class="btn btn-primary save-profile">Save</button>
                            </form>
                        </div>
                        
                       
                    </div>
                </div>
               
            </div>
        </div>
    </div>
